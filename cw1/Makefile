#Autor: Stanis≈Çaw Mnich,                               Krakow, 23.03.2022
#========================================================================
#
#
# make: all, clean, tar, run1, run2, run3, run4, run5, run6
#
#========================================================================
DIR = `basename $(CURDIR)`
#------------------------
NAME1 = 1
NAME2 = 2
NAME3 = 3
NAME4 = 4
NAME5 = 5
NAME6 = 6
#----------------------
EXEC1 = $(NAME1)
OBJS1 = $(NAME1).o
#----------------------
EXEC2 = $(NAME2)
OBJS2 = $(NAME2).o
#----------------------
EXEC3 = $(NAME3)
OBJS3 = $(NAME3).o
#----------------------
EXEC4 = $(NAME4)
OBJS4 = $(NAME4).o
#----------------------
EXEC5 = $(NAME5)
OBJS5 = $(NAME5).o
#----------------------
EXEC6 = $(NAME6)
OBJS6 = $(NAME6).o
#----------------------
#############################
COFLAGS = -Wall -O
LDFLAGS = -Wall -O
CO = gcc
LD = $(CO)
#############################
%.o: %.c
	$(CO) $(COFLAGS) -c $<
#############################
.PHONY: all
all: $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5) $(EXEC6)
#############################
$(EXEC1): $(OBJS1)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC2): $(OBJS2)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC3): $(OBJS3)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC4): $(OBJS4)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC5): $(OBJS5)
	 $(LD) -o $@ $(LDFLAGS) $^
#############################
$(EXEC6): $(OBJS6)
	 $(LD) -o $@ $(LDFLAGS) $^ 
#############################
run1: $(EXEC1)
	./$(EXEC1)
#############################
run2: $(EXEC2)
	./$(EXEC2)
#############################
run3: $(EXEC3)
	./$(EXEC3)
#############################
run4: $(EXEC4)
	./$(EXEC4)
#############################
run5: $(EXEC5)
	./$(EXEC5)
#############################
run6: $(EXEC6)
	./$(EXEC6)
#############################
.PHONY: clean tar
# Porzadki
EXECS = $(EXEC1) $(EXEC2) $(EXEC3) $(EXEC4) $(EXEC5) $(EXEC6)
clean:                                                     
	rm -f *.o  *~ $(EXECS)
#=========================================================================
# Archiwizacja i kompresja
tar: clean
	(cd ../; tar -cvzf $(DIR).tar.gz  $(DIR) )
#=========================================================================
